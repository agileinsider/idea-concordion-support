<idea-plugin url="https://www.jetbrains.com/idea">
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="org.concordion.plugin.idea.md.MarkdownFileTypeFactory"/>
    <multiHostInjector implementation="org.concordion.plugin.idea.injection.ConcordionToMdInjector"/>
    <codeInsight.lineMarkerProvider language="Markdown" implementationClass="org.concordion.plugin.idea.marker.MdSpecLineMarkerProvider"/>
    <completion.contributor language="Concordion" implementationClass="org.concordion.plugin.idea.autocomplete.ConcordionCommandsInMdCompletionContributor"/>
  </extensions>
</idea-plugin>